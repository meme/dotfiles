#!/bin/bash

case $1 in
    "a")
        tmux a -t cmus
        ;;
    "kill")
        tmux kill-session -t cmus
        rm $HOME/.cmus.lock
        ;;
    *)
        if [ -f $HOME/.cmus.lock ]; then
            printf "CMUS is already started"
            exit 1
        else
            touch $HOME/.cmus.lock
            tmux new-session -d -s cmus "cmus"
            exit 0
        fi
        ;;
esac
